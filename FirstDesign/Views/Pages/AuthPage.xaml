<Page x:Class="FirstDesign.Views.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FirstDesign.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid>
        <Border Padding="10" Height="220" Width="260" Background="#37474f" CornerRadius="20">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top">
                    <TextBlock Text="Войти в аккаунт" 
                               HorizontalAlignment="Center" Style="{DynamicResource TitleText}"/>
                    <TextBlock Text="Логин" Margin="0 5 0 5"/>
                    <TextBox Height="30" FontSize="16"/>
                    <TextBlock Text="Пароль" Margin="0 10 0 5"/>
                    <TextBox Height="30" FontSize="16"/>
                </StackPanel>
                <DockPanel VerticalAlignment="Bottom">
                    <Button Style="{DynamicResource Btn}" HorizontalAlignment="Left" Content="Регистрация" Width="100"/>
                    <Button Style="{DynamicResource Btn}" HorizontalAlignment="Right" Content="Войти" Width="80"/>
                </DockPanel>
            </DockPanel>
        </Border>
    </Grid>
</Page>
