<Window x:Class="FirstDesign.Views.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FirstDesign.Views.Windows"
        mc:Ignorable="d"
        Icon="../../Assets/Images/Logo_barbie.png"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel LastChildFill="True" Background="#263238">

        <DockPanel Height="50" Background="#37474f" DockPanel.Dock="Top">
            <Button Margin="10 0" HorizontalAlignment="Right" Content="Назад" 
                    x:Name="backBtn" Click="backBtn_Click" Width="100" Height="30"/>
        </DockPanel>

        <DockPanel Height="50" Background="#37474f" DockPanel.Dock="Bottom">
            <Button Margin="10 0" HorizontalAlignment="Right" Content="Выйти" 
                    x:Name="exitBtn" Click="exitBtn_Click" Width="100" Height="30"/>
        </DockPanel>

        <TextBlock Margin="10"/>

        <Button Width="100" Height="30" Content="Кнопка"/>

        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>

    </DockPanel>
</Window>
